{% set collection = page.collection() %}

{% if collection %}
  {% for item in collection %}
      <div class="item row">
        <a class="col-md-4 col-sm-4 col-xs-12" {% if item.header.link.buy.url %}href="{{ item.header.link.buy.url }}"{% endif %}>
          {% if item.header.cover %}
            <img class="img-responsive book-image" src="{{ item.header.cover }}" alt="{{ item.slug }} book" />
          {% endif %}
        </a>
        <div class="desc col-md-8 col-sm-8 col-xs-12">
          <h3 class="title">
            <a {% if item.header.link.buy.url %}href="{{ item.header.link.buy.url }}" target="_blank"{% endif %}>{{ item.title }}</a>
            {% if item.header.label %}<span class="label label-theme">{{ item.header.label }}</span>{% endif %}
          </h3>

          <div>{{ item.content }}</div>

          <p>
          {% if item.header.link.follow.url %}
            <a class="btn btn-primary" href="{{ item.header.link.follow.url }}" target="_blank"><i class="fa fa-thumbs-up"></i> {{ item.header.link.follow.title|defined("Like") }}</a>
          {% endif %}
          {% if item.header.link.buy.url %}
            <a class="btn btn-success" href="{{ item.header.link.buy.url }}" target="_blank"><i class="fa fa-shopping-cart"></i> {{ item.header.link.buy.title|defined("Buy") }}</a>
          {% endif %}
          </p>
          <p>
          {% if item.header.link.pub.url %}
            <a class="more-link" href="{{ item.header.link.pub.url }}" target="_blank"><i class="fa fa-external-link"></i> {{ item.header.link.pub.title|defined("Publisher's Site") }}</a>
          {% endif %}
          </p>
        </div>
      </div>

    {% if not loop.last %}
      <hr class="divider" />
    {% endif %}
  {% endfor %}
{% endif %}
